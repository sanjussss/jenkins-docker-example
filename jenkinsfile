pipeline{
    agent any
    tools {
        maven 'maven'
	dockerTool 'docker'
    }
    stages {
        stage('Build Maven') {
            steps{
                sh "mvn -Dmaven.test.failure.ignore=true clean package"
            }
        } 
	
	stage('Build Docker Image') {
            steps {
                script {
                  sh 'docker build -t sandeshhm/my-app-1.0 .'
                }
            }
        }	
	stage('Deploy Docker Image') {
	   steps {
			script {
				 
 	withCredentials([string(credentialsId: 'sandeshhm', variable: 'dockerhub')])
			{
			sh 'docker login -u sandeshhm -p ${dockerhub}'
			}  
			sh 'docker push sandeshhm/my-app-1.0'
                }
            }
        }
    }
}
